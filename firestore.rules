rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Baca publik (transparansi)
    match /{document=**} {
      allow read: if true;
    }
    // Tulis hanya admin tertentu (GANTI emailnya di langkah 7)
    match /budgets/{doc} {
      allow write: if request.auth != null && request.auth.token.email == 'admin@desamu.id';
    }
    match /projects/{doc} {
      allow write: if request.auth != null && request.auth.token.email == 'admin@desamu.id';
    }
  }
}
