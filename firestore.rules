rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // >>> GANTI jika mau longgar: hapus baris email_verified
    function isAdmin() {
      return request.auth != null
        && request.auth.token.email == "admin@desamu.id"
        && request.auth.token.email_verified == true; // disarankan
    }

    // Baca publik, tulis hanya admin
    match /{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
